/**index.wxss**/
page{
  color: #666;
}
/**首页导航**/
.nav_wrap{
}
.nav{
  white-space: nowrap;/*超出不换行*/
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid #de698c;
}
/**轮播图**/
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides navigator image{
  width: 100%;
  height: 100%;
}

/**视频列表**/
.video_wrap{
  display: flex;
  flex-wrap:wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.video_item{
  width:48%;
  margin-bottom:20rpx;
}

.video_img{
  position: relative;
}
.video_img image{
  width:100%;
  border-radius: 15rpx;
}
.video_img .video_info{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #FFF;
  font-size: 24rpx;
}
.video_title{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}